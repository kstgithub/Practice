<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="253dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bookshelf_cloud_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_textview_layout_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="提示"
        android:layout_marginTop="25dp"
        android:textColor="@color/text_def"
        android:textSize="@dimen/dialog_common_content_textSize" />

    <com.kst.funddemo.customControls.AdaptableTextView
        android:id="@+id/dialog_textview_layout_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="12dip"
        android:gravity="left"
        android:lineSpacingExtra="3dip"
        android:maxLines="6"
        android:scrollbarThumbVertical="@drawable/btn_dialog_scrollbar_thumb"
        android:scrollbars="none"
        android:singleLine="false"
        android:textColor="@color/text_def"
        android:textSize="@dimen/dialog_single_textSize" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="@color/line_dialog_interval" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_textview_layout_btn_2"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:paddingBottom="10dip"
            android:background="@drawable/customtv_dialog_btn_bg_left"
            android:paddingTop="10dip"
            android:text="@string/cancel"
            android:textColor="@color/text_btn_cancel"
            android:textSize="15sp" />

        <Button
            android:id="@+id/dialog_textview_layout_btn_1"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/customtv_dialog_btn_bg_right"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:text="@string/certain"
            android:textColor="@color/C_white"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>