<?xml version="1.0" encoding="utf-8"?>
<!--
This is for Android 2.3, refer to
http://stackoverflow.com/questions/3056232/how-to-make-a-shape-with-left-top-round-rounded-corner-and-left-bottom-rounded-c
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/btn_other_checked"/>
            <corners android:bottomRightRadius="6dp"/>
        </shape>
    </item>

    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/btn_other_checked"/>
            <corners android:bottomRightRadius="6dp"/>
        </shape>
    </item>
    
    <item android:state_window_focused="false" >
        <shape>
            <solid android:color="@color/C_white"/>
            <corners android:bottomRightRadius="6dp"/>
        </shape>
    </item>
</selector>
